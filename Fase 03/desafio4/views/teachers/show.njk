{% extends "layout.njk" %}

{% block main %}
  <main>

    <div class="card">
      <section class="card__avatar" style="background:url('{{ teacher.avatar_url }}') no-repeat center center / cover"></section>
      <section class="card__details">

        <h1>Professor(a)</h1>
        <div class="card__details--item">
          <div>Professor(a)</div>
          <div>{{ teacher.name }}</div>
        </div>
        <div class="card__details--item">
          <div>Idade</div>
          <div>{{ teacher.age }}</div>
        </div>
        <div class="card__details--item">
          <div>Grau de escolaridade</div>
          <div>{{ teacher.scholarity }}</div>
        </div>
        <div class="card__details--item">
          <div>Tipo de aula</div>
          <div>{{ teacher.modality }}</div>
        </div>
        <div class="card__details--item">
          <div>Acompanhamento</div>
          <div>
            {% for service in teacher.services %}
              <span>{{ service }}</span>
            {% endfor %}
          </div>
        </div>
        <div class="card__details--item">
          <div>Desde</div>
          <div>{{ teacher.created_at }}</div>
        </div>

      </section>
    </div>

  </main>
{% endblock %}