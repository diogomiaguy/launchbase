{% extends "layout.njk" %}

{% block head %}
  <title>Gym Manager</title>
{% endblock %}

{% block content %}
  <div class="card table-container">

    <div class="btn-cadastrar">
      <a href="/members/create">Novo</a>
    </div>
    <table>
      
      <thead>
        <tr>
          <th>Membro</th>
          <th>Peso</th>
          <th>Tipo Sanguíneo</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{ member.avatar_url }})"></span>
              {{ member.name }}
            </td>
            <td>{{ member.weight }}Kg</td>
            <td>{{ member.blood }}</td>
            <td>
              <a href="/members/{{ member.id }}">Ver</a>
            </td>
          </tr>
        {% endfor %}

      </tbody>
    </table>

  </div>
{% endblock content %}