<div class="item">
  <div>avatar url</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" value="{{ member.name}}">
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input type="email" name="email" value="{{ member.email}}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ member.birth}}">
  </div>
</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <input type="radio" name="gender" {% if member.gender == "M" %} checked="checked" {% endif %} value="M">Masculino
    </span>
    <span>
      <input type="radio" name="gender" {% if member.gender == "F" %} checked="checked" {% endif %} value="F">Feminino
    </span>

  </div>
</div>

<div class="item">
  <div>Tipo Sangu√≠neo</div>
  <div>
    <select name="blood" id="">
      <option value="A+" {% if member.blood == 'A+' %} selected="selected" {% endif %}>
        A+
      </option>
      <option value="A-" {% if member.blood == 'A-' %} selected="selected" {% endif %}>
        A-
      </option>
      <option value="B+" {% if member.blood == 'B+' %} selected="selected" {% endif %}>
        B+
      </option>
      <option value="B-" {% if member.blood == 'B-' %} selected="selected" {% endif %}>
        B-
      </option>
      <option value="AB+" {% if member.blood == 'AB+' %} selected="selected" {% endif %}>
        AB+
      </option>
      <option value="AB-" {% if member.blood == 'AB-' %} selected="selected" {% endif %}>
        AB-
      </option>
      <option value="O+" {% if member.blood == 'O+' %} selected="selected" {% endif %}>
        O+
      </option>
      <option value="O-" {% if member.blood == 'O-' %} selected="selected" {% endif %}>
        O-
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Peso (Kg)</div>
  <div>
    <input type="number" name="weight" value="{{ member.weight}}">
  </div>
</div>

<div class="item">
  <div>Altura (Cm)</div>
  <div>
    <input type="number" name="heigth" value="{{ member.heigth}}">
  </div>
</div>

<button type="submit">Salvar</button>