{% extends "layout.njk" %}

{% block head %}
  <title>Gym Manager</title>
{% endblock %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section class="avatar"></section>
    <section class="details">
      <h3>Novo Instrutor</h3>

      <div class="item">
        <div>avatar url</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://" required="required">
        </div>
      </div>

      <div class="item">
        <div>Intrutor</div>
        <div>
          <input type="text" name="name" placeholder="Nome do instrutor" required="required">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth" required="required">
        </div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>
          <span>
            <input type="radio" name="gender" value="M">Masculino
          </span>
          <span>
            <input type="radio" name="gender" value="F">Feminino
          </span>

        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula">
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}